        <td><%= link_to 'Edit', edit_project_customer_path(@project, customer) %></td>
        <td><%= link_to 'Destroy', project_customer_path(:project_id => @project.id, :id => customer.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

