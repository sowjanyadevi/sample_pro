<h1>New Customer</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>password</th>
      <th>password_confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><h2 id="customer"><%= customer.title %></h2></td>
        <td><h2 id="customer"><%= customer.description %></h2></td>
